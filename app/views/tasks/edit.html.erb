<h1>Edit Task</h1>
<%= simple_form_for(@task) do |f| %>
  <div class="form-group mt-3">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, :class => 'form-control' %>
  </div>
    <%= f.submit :class => 'btn btn-primary mt-3'%>
<% end %>
